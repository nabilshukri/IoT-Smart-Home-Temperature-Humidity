<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewController"
    android:orientation="vertical"
    android:background="@drawable/wallpaper2"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Controller Place"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Scrollable Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/placeNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of the Place" />

            <EditText
                android:id="@+id/placePurposeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What the Place is for" />

            <EditText
                android:id="@+id/maxTempEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Maximum Temperature" />

            <EditText
                android:id="@+id/minTempEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimum Temperature" />

            <EditText
                android:id="@+id/avgTempEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Average Temperature" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="Submit" />

</LinearLayout>
